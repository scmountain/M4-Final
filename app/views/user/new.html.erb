<div class="login-form"> <h1>Log In</h1>
  <%= form_for :session, url: login_path do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.submit "Login", class: "btn btn-color" %>
    <% end %>
</div>

<div class="sign-up"> <h1>Sign Up</h1>
  <%= form_for :user, url: '/users' do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    <%= f.submit "Sign Up", class: "btn btn-color" %>
    <% end %>
</div>
