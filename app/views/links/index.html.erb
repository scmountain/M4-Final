<form id="link-create">
  Title: <input type="text" name="title" id="link-title"><br>
  URL: <input type="text" name="url" id="link-url"><br><br>
  <input type="button" value="Create Link" id="link-submit">
  <input type="hidden" name="user_id" value="<%= current_user.id  %>" id="user-id"><br>
  <input type="hidden" name="read" value=false id="link-read"><br>
</form>

<h2>My links</h2>
<div id="search-box">
  <input>
</div>
<div id="links-list">
  <% @links.each do |link| %>
  <div class='link'>
    <%= render partial: '/links/new', locals: {link: link} %>
  </div>
  <% end %>
</div>
